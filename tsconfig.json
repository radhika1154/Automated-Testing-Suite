{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "tests/**/*.ts",  // Ensure all test files are compiled
      "node_modules/@playwright/test/**/*.ts" // Include Playwright's TypeScript files
    ]
  }